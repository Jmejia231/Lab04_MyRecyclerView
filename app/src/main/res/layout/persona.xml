<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/nombrePersona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/fotoPersona"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/nombrePersona"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/txtdetalle"/>

            <TextView
                android:id="@+id/edadPersona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoPersona"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="80dp"
                android:background="@color/buttoncolor"
                android:padding="10dp"
                android:text="@string/ver_titulos"
                android:textColor="@color/cardview_light_background" />/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>